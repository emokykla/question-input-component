{
  "exclude": [
    "node_modules",
    "example"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}